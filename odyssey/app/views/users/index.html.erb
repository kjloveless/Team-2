<% provide(:title, 'All users') %>

<!-- Designed by Nicholas Drazenovic & Emily Huizenga -->
<!DOCTYPE html>

<head>
</head>

<body>
   <%= render 'layouts/navbar' %>


    <!-- Begin the main content -->
    <div class='container white-container'>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">

                <h2>Users</h2>
                <p>Select a user from the list below to edit. To add a new user click 'Add New User'</p>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
        <%= button_to "Create New User", 
            { :action => "new" }, :method => :get, class: 'btn btn-success'  %>                
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
            <%= render 'layouts/flash_messages' %>
                <!-- Table of users -->
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>User ID</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                        <% @user.each do |user| %> 
                        <tr>
                            <td>
                                <%= link_to user.user_id, user %>
                            </td>
                            <td>
                                <%= user.user_email %>
                            </td>
                        </tr>
                        <% end %>
                </table>
            </div>
        </div>
    </div>
</body>
</html>