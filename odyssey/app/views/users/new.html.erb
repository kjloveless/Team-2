<% provide(:title, 'Sign up') %>
<body>
    <%= render 'layouts/navbar' %>
    <!-- Begin main content -->
  <div class="container">
    <div class="row">
      <div class='col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2 well'>
      <h4 class="text-center">Manage User</h4>
        <div class="row">
            <%= form_for (@user), url: {action: "create"}, html: {class: "nifty form"} do |f| %>
            
              <%= f.label :user_id %>
              <%= f.text_field :user_id, class: 'form-control' %>
              </br>
            
              <%= f.label :user_email %>
              <%= f.email_field :user_email, class: 'form-control' %>
              </br>
              
              <%= f.label :permission_level %>
              <%= f.select :permission_level, [['Entry','0'],['Standard','1'],['Admin','2']], :include_blank => true %>
              </br>
              </br>
            
              <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control' %>
            
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
              </br>
            
              <%= f.submit "Create Account", class: "btn btn-primary" %>
              <%= link_to "Cancel", users_index_path, class: "btn btn-primary" %>
            <% end %>
        </div>          
      </div>
    </div>
  </div>
</body>